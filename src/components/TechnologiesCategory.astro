---
const { src, title, technologies } = Astro.props;
import "../styles/technologies.css";
import Technology from "./Technology.astro";
---

<div class="technologies">
    <div class="technologies-img">
        <img src={src} width="31px" height="31px" alt="" />
    </div>
    <h2 class="technologies-title">{title}</h2>
    <div class="technologies-list">
        {
            technologies.map((technology: string) => {
                return <Technology name={technology} />;
            })
        }
    </div>
</div>
