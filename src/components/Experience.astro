---
const { src, technologies, company, year, backgroundColor } = Astro.props;
import "../styles/experience.css";
import Technology from "./Technology.astro";
---

<div class="experience">
    <div class="experience-img" style={`background-color: ${backgroundColor};`}>
        <img class="experience-img" src={src} alt={`${company} logo`} />
    </div>
    <h3 class="experience-company">{company}</h3>
    <span class="experience-year">{year}</span>
    <div class="experience-description">
        <slot />
    </div>
    <div class="experience-technologies">
        {
            technologies.map((technology: string) => {
                return <Technology name={technology} />;
            })
        }
    </div>
</div>
